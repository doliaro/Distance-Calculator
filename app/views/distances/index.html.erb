<div class="page-header">
  <%= link_to new_distance_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Distance
  <% end %>
  <h1>Listing distances</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Start Address</th>
        <th>Destination Address</th>
        <th>Distance(Miles)</th>
        <th>Distance(Time)</th>
        <th></th>
      </tr>
    </thead>

    <!-- List out all saved destinations and distances -->
    <tbody>
      <%= content_tag_for(:tr, @distances) do |distance| %>
        <td><%= distance.start_address %></td>
        <td><%= distance.destination_address %></td>
        <td><%= distance.miles %> Mile(s) </td>
        <td><%= distance.time %> </td>
        <td><%= link_to 'Delete', distance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
