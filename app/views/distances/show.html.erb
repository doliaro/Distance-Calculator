<div class="page-header">
  <%= link_to distances_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_distance_path(@distance), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show distance</h1>
</div>

<dl class="dl-horizontal">
  <dt>Start address:</dt>
  <dd><%= @distance.start_address %></dd>

  <dt>Destination address:</dt>
  <dd><%= @distance.destination_address %></dd>
</dl>
